{
  "name": "bazis-debug",
  "displayName": "Базис-Отладчик",
  "version": "0.4.8",
  "publisher": "BazisSoft",
  "icon": "images/bazis-logo.png",
  "description": "%extension.description%",
  "categories": [
    "Debuggers"
  ],
  "author": {
    "name": "BazisSoft"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "prepublish": "node ./node_modules/gulp/bin/gulp.js build",
    "build": "node ./node_modules/gulp/bin/gulp.js build",
    "test": "node ./node_modules/mocha/bin/mocha --timeout 10000 -u tdd ./out/tests/",
    "nodemon": "./node_modules/.bin/nodemon --debug --nolazy ./out/node/nodeDebug.js --server=4711",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "engines": {
    "vscode": "^1.3.0"
  },
  "dependencies": {
    "glob": "^7.1.1",
    "minimatch": "^3.0.3",
    "request-light": "^0.1.0",
    "source-map": "^0.5.6",
    "vscode-debugadapter": "^1.19.0",
    "vscode-debugprotocol": "^1.19.0",
    "vscode-nls": "^2.0.2",
    "typescript": "^2.3.3",
    "winreg": "^1.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BazisSoft/vscode-bazis-debug"
  },
  "devDependencies": {
    "@types/es6-collections": "^0.5.30",
    "@types/es6-promise": "0.0.32",
    "@types/mocha": "^2.2.41",
    "@types/node": "^6.0.73",
    "@types/source-map": "^0.5.0",
    "del": "^2.2.2",
    "event-stream": "^3.3.4",
    "gulp": "^3.9.1",
    "gulp-filter": "^4.0.0",
    "gulp-sourcemaps": "^1.12.0",
    "gulp-tsb": "^2.0.3",
    "gulp-tslint": "^6.1.3",
    "gulp-typescript": "^3.1.6",
    "gulp-uglify": "^2.1.2",
    "gulp-util": "^3.0.8",
    "mocha": "^3.4.2",
    "nodemon": "^1.11.0",
    "run-sequence": "^1.2.2",
    "tslint": "^3.15.1",
    "tslint-microsoft-contrib": "^2.0.14",
    "vsce": "^1.22.0",
    "vscode": "^1.1.0",
    "vscode-debugadapter-testsupport": "^1.19.0",
    "vscode-nls-dev": "^2.1.2"
  },
  "main": "./out/node/extension",
  "activationEvents": [
    "onCommand:bazis-debug.provideInitialConfigurations",
    "*"
  ],
  "contributes": {
    "configuration": {
      "title": "Bazis-Debug Configuration",
      "properties": {
        "bazis-debug.formEditorPath": {
          "type": "string",
          "default": "",
          "description": "Путь к приложению редактора форм"
        },
        "bazis-debug.bazisVersion": {
          "type": "string",
          "default": "Bazis10",
          "enum": [
            "Bazis10"
          ],
          "description": "Версия модуля Базис"
        },
        "bazis-debug.lastSessionLogging": {
          "type": "boolean",
          "default": false,
          "description": "Включить полный лог последней сессии. По умолчанию выключено"
        },
        "bazis-debug.logDir":{
          "type":"string",
          "description": "Путь к директории, где будет храниться лог файл. По умолчанию - директория расширения"
        }
      }
    },
    "commands": [
      {
        "command": "bazis-debug.addDeclarationFiles",
        "title": "Добавить/обновить файлы определений *.d.ts для Базис-Мебельщик"
      },
      {
        "command": "bazis-debug.openFormEditor",
        "title": "Открыть редактор форм"
      }
    ],
    "keybindings": [
      {
        "command": "bazis-debug.openFormEditor",
        "key": "F7"
      }
    ],
    "breakpoints": [
      {
        "language": "javascript"
      },
      {
        "language": "javascriptreact"
      },
      {
        "language": "typescript"
      }
    ],
    "debuggers": [
      {
        "type": "bazis",
        "label": "%bazis.label%",
        "program": "./out/node/nodeDebug.js",
        "runtime": "node",
        "aiKey": "AIF-d9b70cd4-b9f9-4d70-929b-a071c400b217",
        "initialConfigurations": "bazis-debug.provideInitialConfigurations",
        "configurationSnippets": [
          {
            "label": "%bazis.snippet.launch.label%",
            "description": "%bazis.snippet.launch.description%",
            "body": {
              "type": "bazis",
              "request": "launch",
              "name": "%bazis.launch.config.name%",
              "sourceMaps": true,
              "program": "^\"\\${file}\""
            }
          }
        ],
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "%bazis.launch.program.description%",
                "default": "${file}"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "%bazis.stopOnEntry.description%",
                "default": true
              },
              "args": {
                "type": "array",
                "description": "%launch.args.description%",
                "items": {
                  "type": "string"
                },
                "default": []
              },
              "sourceMaps": {
                "type": "boolean",
                "description": "%bazis.sourceMaps.description%",
                "default": true
              },
              "port": {
                "type": "number",
                "description": "%bazis.port.description%",
                "default": 5858
              },
              "address": {
                "type": "string",
                "description": "%bazis.address.description%",
                "default": "localhost"
              },
              "timeout": {
                "type": "number",
                "description": "%bazis.timeout.description%",
                "default": 10000
              },
              "noDebug": {
                "type": "boolean",
                "description": "%bazis.noDebug.description%",
                "default": false
              }
            }
          }
        }
      }
    ]
  }
}